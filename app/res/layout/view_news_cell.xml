<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical" android:id="@+id/news_cell_layout" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/blanco">
        
    <TextView
        android:id="@+id/tv_news_cell_pub_date"
        android:layout_width="wrap_content"
        android:layout_height="30.0dip"
        android:layout_marginBottom="0.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="0.0dip"
        android:gravity="left|center"
        android:text="(fecha de publicacion)"
        android:textColor="@color/clear_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_news_cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_cell_pub_date"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="10.0dip"
        android:gravity="left|center"
        android:text="(titulo de la noticia de prueba)"
        android:textColor="@color/azul_cielo"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>
