<resources>

    <!-- App default theme -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
        <item name="actionBarItemBackground">@drawable/list_selector_sg</item>
        <item name="android:actionBarItemBackground">@drawable/list_selector_sg</item>
        <item name="custom_list_selector">@drawable/list_selector_sg</item>
    </style>
    
    <style name="AppTheme_NoTitle" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
             
   	<style name="SemitransparentCustomDialog" parent="android:Theme">
        <item name="android:windowBackground">@color/bg_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
   	<style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@color/darkgrey</item>
        <item name="android:background">@color/darkgrey</item>
    </style>
    
    <style name="DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">?custom_list_selector</item>
    </style>
</resources>